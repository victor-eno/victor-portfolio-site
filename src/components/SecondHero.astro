---
import ProjectButton from "./ProjectButton.astro";
import '../../public/fonts/DancingScript-Bold.ttf'
---

<section class="hero">
    <div class="hero-text">
        <h1 class="greetings">hello! I am</h1>
        <h1 class="name">victor</h1>
        
        <p class="value">
            I'm a <strong>web developer</strong> that loves creating
            <strong>instinctive web applications</strong> through  the
            design of <strong> clean and visaul aesthetic web interfaces</strong>.
        </p>
    </div>

    <div class="call-to-action">
            <ProjectButton />
    </div>
</section>

<style>
	section {
        padding: 0;
        margin: 0;
        background: var(--purple-mirage);
    }

    .hero {
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-top: 100px;
    }

    .hero-text {
        padding: 0;
        text-align: center;
    }

    .greetings {
        font-size: 6em;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 5px;
        background: linear-gradient(45deg, #21de9f,#12d695, #37cdac);
        background-size: 400% 400%;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }
    .greetings {
        animation: fade-out 4s infinite alternate;
        font-size: 6em;
    }
        @keyframes fade-out {
            0% {
                opacity: 1;
            }
            50% {
                opacity: 0.7;
            }
            100% {
                opacity: 1;
            }
        }
   
    .hero-text h1 {
        line-height: 0.8em;
        margin: 30px 0 30px;
    }

    .name {
        font-family: 'Roboto';
        position: relative;
        z-index: 2;
        font-size: 10em;
        font-weight: 900;
        line-height: 1.2;
        text-transform: uppercase;
        color: #12d695;
        background: linear-gradient(to left,  #2a3d3c,#203433, #375b59, #366664, #246557, #21de9f,#12d695, #37cdac, #22ac8e, #386663, #264948, #2c4d4b, #375b59, #2c4745);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        -webkit-text-stroke-width: 2px;
        animation: animate 6s linear infinite;
        background-size: 150%;
    }           
    @keyframes animate {
            0%{
                background-position: 0% 100%;
            }
            50%{
                background-position: 100% 0%;
            }
            100%{
                background-position: 0% 100%;
            }
  }

    p {
        animation-name: fade-in;
        animation-duration: 2s;
        font-size: 17px;
        font-weight: 200;
    }
        @keyframes fade-in {
            from {
                opacity: 0;
            }
                to {
                 opacity: 1;
                     }
            }

    .call-to-action {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 20px;
    }
    .value {
        text-align: justify;
        padding: 0 14em;
        background: linear-gradient(-25deg, #21de9f,#12d695, #37cdac);
        background-size: 400% 400%;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    @media (max-width: 800px) {
        section { 
            transition: .2s;
            display: flex;
        }
        h1, .name {
            font-size: 5.8em;
            font-weight: 800;
        }
        .hero-text > .greetings {
            font-size: 2.8em;
            font-weight: 700;
            letter-spacing: 0.2em;
        }
        .call-to-action {
            padding-top: 6em;
        }
        .value {
            padding: 0 50px;
    }
        p {
            font-size: 16px;
            font-weight: 200;
    }
    }
</style>



















