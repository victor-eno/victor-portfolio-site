<div class="projects-header">
    <h1 class="projects-theme brilliance">brilliance &</h1>
    <h1 class="projects-theme creative">creative</h1>
    <h1 class="projects-theme compositions">forms</h1>
    <span class="leading-theme">...shall never cease</span>
  </div>
  
  <style>
      .projects-header {
        background: linear-gradient(to bottom, #6b4ee6, #8116fb);
        background-size: 400%, 100%;
        padding-top: 12em;
      }
      .projects-theme {
        font-family: 'Poppins', sans-serif;
        line-height: 0.3em;
        margin: 0;
        padding: 28px 20px 20px;  
    }
    .brilliance {
        font-size: 8.2em;
        font-weight: 100;
        color: #5ffae0;
        opacity: 0.28;
    }
    .creative {
        font-size: 9em;
        margin-bottom: 20px;
        padding-top: 50px;
        padding-left: 100px;
        font-weight: 700;
        color: #5ffae0;
        opacity: 0.88;
    }
    .compositions {
        font-size: 11em;
        letter-spacing: -0.01em;
        margin-bottom: 20px;
        padding-left: 0.1em;
        padding-top: 0.1em;
        font-weight: 900;
        color: #5ffae0;
        opacity: 0.58;
    }
    .creative {
        animation: fade-out 4s alternate;
    }
        @keyframes fade-out {
            0% {
                opacity: 0.8;
            }
            50% {
                opacity: 0.7;
            }
            100% {
                opacity: 0.3;
            }
        }
    .leading-theme {
        font-size: 1.8em; 
        font-family: 'Poppins', sans-serif;
        font-weight: 400;
        padding-left: 18px;
        padding-top: 90px;
        color: #5ffae0;
        opacity: 0.48;
      }
      @media screen and (max-width: 800px) {
        .projects-header {
        display: flex;
        flex-direction: column;
        justify-content: left;
        text-align: left;
        padding-top: 9em;
      }
        .projects-theme {
        font-size: 3.6em;
        font-family: 'Poppins', sans-serif;
        line-height: 0.001em;
        margin: 0;
        padding-top: 25px;
        padding-left: 2px;
        }
        .brilliance {
        font-weight: 400;
      }
      .creative {
        font-size: 4.5em;
        padding-top: 0.5em;
        padding-left: 0.5em;
        font-weight: 600;
      }
      .compositions {
        font-weight: 800;
        font-size: 5em;
        padding-top: 0.35em;
    }
    .leading-theme {
          font-size: 1.2em; 
          font-weight: 400;
          padding-top: 0.25em;
          padding-left: 0.25em;
      }
      }
  </style>