---
import ProjectButton from "./ProjectButton.astro";
import '../../public/fonts/DancingScript-Bold.ttf'
import Skills from "./Skills.astro";
---

<div class="hero-container">
    <div class="hero-text">
        <h1 class="greetings">hello! I am</h1>
        <h1 class="name">victor</h1>
        
        <p class="value">
            I'm a <strong>web developer</strong> that loves creating
            <strong>instinctive, clean and visaul aesthetic web interfaces
            </strong>
        </p>
    </div>

    <div class="call-to-action">
            <ProjectButton />
    </div>
</div>

<style>
	.hero-container {
        padding: 0;
        margin: 0;
        background: var(--purple-mirage);
    }

    .hero-container {
        width: 100%;
        height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding-top: 100px;
    }

    .hero-text {
        padding: 0;
        text-align: center;
    }

    .greetings {
        font-size: 6em;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 5px;
        background: linear-gradient(45deg, var(--blue-swift), var(--blue-shift), var(--blue-rift), var(--blue-drift));
        background-size: 400% 400%;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }
    .greetings {
        animation: fade-out 8s infinite alternate;
        font-size: 6em;
    }
        @keyframes fade-out {
            0% {
                opacity: 1;
            }
            50% {
                opacity: 0.7;
            }
            100% {
                opacity: 1;
            }
        }
   
    .hero-text h1 {
        line-height: 0.8em;
        margin: 30px 0 30px;
    }

    .name {
        font-family: 'Roboto';
        position: relative;
        z-index: 0;
        font-size: 10em;
        font-weight: 900;
        line-height: 1.2;
        text-transform: uppercase;
        color: var(--blue-shift);
        background: linear-gradient(to left, rgb(24, 96, 125), rgb(12, 81, 108), rgb(24, 96, 125), rgb(14, 77, 101), rgb(65, 200, 255), rgb(70, 193, 241), rgb(79, 202, 250), rgb(24, 96, 125), rgb(24, 96, 125), rgb(12, 81, 108));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        -webkit-text-stroke-width: 1px;
        animation: animate 8s linear infinite;
        background-size: 150%;
    }           
    @keyframes animate {
            0%{
                background-position: 0% 100%;
            }
            50%{
                background-position: 100% 0%;
            }
            100%{
                background-position: 0% 100%;
            }
  }

    p {
        animation-name: fade-in;
        animation-duration: 2s;
        font-size: 17px;
        font-weight: 200;
    }
        @keyframes fade-in {
            from {
                opacity: 0;
            }
                to {
                 opacity: 1;
                     }
            }

    .call-to-action {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding-top: 20px;
    }
    .value {
        text-align: justify;
        padding: 0 14em;
        background: linear-gradient(-25deg, #ee07bc, #48dbf8);
        background-size: 400% 400%;
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
    }

    @media (max-width: 800px) {
        section { 
            transition: .2s;
            display: flex;
        }
        h1, .name {
            font-size: 5.6em;
            font-weight: 800;
        }
        .hero-text > .greetings {
            font-size: 2.6em;
            font-weight: 700;
            letter-spacing: 0.16em;
        }
        .call-to-action {
            padding-top: 6em;
        }
        .value {
            padding: 0 50px;
    }
        p {
            font-size: 16px;
            font-weight: 200;
    }
    }
</style>



















